<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{ name: "HandheldFriendly" , content: "True" }/
    %meta{ name: "MobileOptimized" , content: "320" }/
    %meta{ name: "viewport" , content: "width=device-width, initial-scale=1.0" }/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Write/Speak/Code"

    = stylesheet_link_tag "normalize", "application"
    = javascript_include_tag "all"

    = javascript_include_tag "//use.typekit.net/olz5yha.js"

    :javascript
      try{Typekit.load();}catch(e){ alert(e); }

  %body{class: page_classes}
    .container
      = partial 'nav'
      %section#main{ class: "#{current_page.data.page_class}" }
        = yield

      %footer.footer{ role: "contentinfo" }
        .footer-logo

        %ul
          %li
            = link_to "About", "/about"
          %li
            = link_to "Organizers", "/about/organizers"

        .footer-secondary-links
          %ul
            %li
              = link_to "Code of Conduct", "/about/code-of-conduct"
            %li Logo design by McKenna Lowry and Maryanne Ko
            %li
              = "&copy; Rebecca Miller-Webster 2013-#{DateTime.now.year}".html_safe

          %ul.footer-social
            %li
              %a{ href: 'http://www.twitter.com/writespeakcode' }
                %span.fa.fa-twitter
            %li
              %a{ href: 'http://www.github.com/writespeakcode' }
                %span.fa.fa-github
            %li
              %a{ href: 'mailto:info@writespeakcode.com' }
                %span.fa.fa-envelope

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40295985-1', 'auto');
      ga('send', 'pageview');
